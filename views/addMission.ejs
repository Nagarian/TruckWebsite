<%- include('header') -%>

<div class="right_col" role="main">

<div class="">
    <div class="page-title margintop45px">
        <div class="title_left">
            <h3>Ajout d'une mission</h3>
        </div>
    </div>
    <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">

                        <form class="form-horizontal form-label-left">

                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_name">Intitulé <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="form_name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="name" required="required" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_description">Description <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <textarea id="form_description" required="required" name="description" class="form-control col-md-7 col-xs-12"></textarea>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_date">Date <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="date" id="form_date" name="date" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_driver">Utilisateur <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="form_driver" name="conducteur" required="required" class="form-control col-md-7 col-xs-12">
                                    <% for(var i=0; i < _drivers.length; i++) { %>
                                        <option value='<%= _drivers[i].Id %>'><%=_drivers[i].FirstName%> <%=_drivers[i].LastName%></option>
                                    <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_vehicule">Véhicule <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="form_vehicule" name="vehicule" required="required" class="form-control col-md-7 col-xs-12">
                                    <% for(var i=0; i < _vehicules.length; i++) { %>
                                        <option value='<%= _vehicules[i].Id %>'><%= _vehicules[i].Brand %> - <%= _vehicules[i].Model %></option>
                                    <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_enlevement">Lieu d'enlèvement <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="form_enlevement" name="form_enlevement" required="required" class="form-control col-md-7 col-xs-12">
                                    	<% for(var i=0; i < _warehouses.length; i++) { %>
                                            <option value='<%= _warehouses[i].Id %>'><%= _warehouses[i].Name %></option>
                                        <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="form_livraison">Lieu de livraison <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="form_livraison" name="form_livraison" required="required" class="form-control col-md-7 col-xs-12">
                                    	<% for(var i=0; i < _clients.length; i++) { %>
                                            <option value='<%= _clients[i].Id %>'><%= _clients[i].Name %></option>
                                        <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="pieceJointe">Pièce jointe</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="file" id="pieceJointe" name="pieceJointe" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                        </form>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <button id="postMission" class="btn btn-success">Ajouter la mission</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/page_mission_ajout.js"></script>
<%- include('footer') -%>