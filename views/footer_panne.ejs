<!-- Modale "Consulter une panne" -->
<div class="modal fade bs-example-modal-lg" id="pannesPopupConsultPanne" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Une panne est survenue !</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div style="font-size:18px;"><strong>Récapitulatif de la mission</strong></div>

                            <form id="form-panne-reparateur" data-parsley-validate class="form-horizontal form-label-left">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="mission-name">Nom
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input disabled type="text" id="mission-name" class="form-control col-md-7 col-xs-12" value="Livraison de lait" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="mission-desc">Description
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <textarea id="description" name="mission-desc" class="form-control col-md-7 col-xs-12" disabled></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="mission-conducteur">Conducteur
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input disabled type="text" id="mission-conducteur" class="form-control col-md-7 col-xs-12" value="ROBERT Hector" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="mission-telephone">Numéro
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input disabled type="text" id="mission-telephone" class="form-control col-md-7 col-xs-12" value="09 99 54 99 54" />
                                    </div>
                                </div>

                                <div class="divider-dashed"></div>
                                <div style="font-size:18px;"><strong>Panne</strong></div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="panne-date">Date
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input disabled type="text" id="mission-name" class="form-control col-md-7 col-xs-12" value="12/01/2016" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="panne-desc">Description
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <textarea id="description" name="panne-desc" class="form-control col-md-7 col-xs-12" disabled></textarea>
                                    </div>
                                </div>

                                <div class="divider-dashed"></div>
                                <div style="font-size:18px;"><strong>Réparateur</strong></div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Qui envoyer ?</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select class="form-control">
                                            <option selected>MARTIN Hélène</option>
                                        </select>
                                    </div>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal-footer">
                <button type="submit" style="margin-bottom:0px;" class="btn btn-primary" data-dismiss="modal">Envoyer</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
            </div>

        </div>
    </div>
</div>